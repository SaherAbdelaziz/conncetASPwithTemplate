
            @for (var i = 0; i < Model.Count; i++)
            {
                    <tr>
                        <td> @Model[i].Order.CustomerName </td>
                        <td> @Model[i].Order.CustomerPhone </td>
                      
                        <td>
                            @Model[i].Order.Details
                            <button class="btn btn-primary btn-sm">test</button>
                        </td>
                        <td>
                            Price :     @Model[i].Order.Price <br>
                            Delivery :  @Model[i].Order.Delivery <br>
                            TotalPrice :@Model[i].Order.TotalPrice
                        </td>
                        <td> @Model[i].Order.OutLet.Name </td>
                        <td> @Model[i].Order.HdAreas.Name </td>
                        <td> @Model[i].Order.CustomerStreet </td>

                        @if (Model[i].Order.DeliveryTimeIndex == 0)
                        {
                            <td> as fast as possible </td>
                        }


                        else if (Model[i].Order.DeliveryTimeIndex == 1)
                        {
                            <td> in one hour </td>
                        }

                        else
                        {
                            <td> in two hour </td>

                        }


                    @if (Model[i].Order.OrderState == 0)
                    {
                    <td class="hidden-480">
                        <span class="label label-sm label-success"> New </span>
                    </td>
                    }
                    
                    else if (Model[i].Order.OrderState == 1)
                    {
                        <td class="hidden-480">
                            <span class="label label-sm label-warning"> Pending </span>
                        </td>

                    }
                    
                    else if (Model[i].Order.OrderState == 2)
                    {
                        <td class="hidden-480">
                            <span class="label label-sm label-danger"> Rejected </span>
                        </td>
                    }

                    <td>
                        <div class="hidden-sm hidden-xs btn-group">
                            <button class="btn btn-xs btn-success">
                                <i class="ace-icon fa fa-check bigger-120"></i>
                            </button>

                            <button class="btn btn-xs btn-info">
                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                            </button>

                            <button class="btn btn-xs btn-danger">
                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                            </button>

                            <button class="btn btn-xs btn-warning">
                                <i class="ace-icon fa fa-flag bigger-120"></i>
                            </button>
                        </div>

                        <div class="hidden-md hidden-lg">
                            <div class="inline pos-rel">
                                <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                    <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                    <li>
                                        <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                            <span class="blue">
                                                <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>

                                    <li>
                                        <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                            <span class="green">
                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>

                                    <li>
                                        <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                            <span class="red">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
            }