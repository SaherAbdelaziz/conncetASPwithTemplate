@model conncetASPwithTemplate.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_mytemplate.cshtml";

}

<!-- Section - Main -->
<div id="content">
    <div>
        <hr />

        <section class="section bg-light">

            <div class="container">
                <div class="row">

                    <div class="bg-white p-4 p-md-5 mb-4">
                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "row mb-5", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4 class="border-bottom pb-4"><i class="ti ti-user mr-3 text-primary"></i> Change Password Form </h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group  col-sm-10">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-10 control-label" })
                                <div >
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group  col-sm-10">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-10 control-label" })
                                <div >
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group  col-sm-10">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-20 control-label" })
                                <div >
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-sm-10">
                                <div class="text-center">
                                    <input type="submit" class="btn btn-primary btn-lg " value="Change password" />
                                </div>
                            </div>
                        }


                    </div>

                </div>

            </div>
        </section>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}